generator client {
  provider = "prisma-client"
}

datasource db {
  provider = "postgresql"
}

model Patient {
  id      Int      @id @default(autoincrement())
  name    String
  phone   String
  age     Int
  records Record[]
}

model Record {
  id        Int     @id @default(autoincrement())
  patient   Patient @relation(fields: [patientId], references: [id])
  patientId Int
}
